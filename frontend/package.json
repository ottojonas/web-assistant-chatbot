{
  "name": "web-assistant-chatbot",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build: css": "postcss config/tailwind.config.js -o styles/global.css",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --confitg config/jest.config.cjs",
    "watch-tests": "jest --watch --config config/jest.config.cjs",
    "electron": "electron .",
    "package-win": "electron-packager . WebAssistantChatBot --platform=win32 --arch=x64 --out=dist --overwrite",
    "package-mac": "electron-packager . WebAssistantChatBot --platform=darwin --arch=x64 --out=dist --overwrite",
    "package-linux": "electron-packager . WebAssistantChatBot --platform=linux --arch=x64 --out=dist --overwrite",
    "pkg": "pkg ."
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest.setup.js"
    ]
  },
  "bin": "index.js",
  "pkg": {
    "scripts": [
      "index.js"
    ],
    "assets": [
      "public/**/*"
    ],
    "targets": [
      "node16-linux-x64",
      "node16-macos-x64",
      "node16-win-x64"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": "config/tailwind.config.js",
      "autoprefixer": {}
    }
  },
  "dependencies": {
    "@types/node": "18.15.11",
    "@types/react": "18.0.33",
    "@types/react-dom": "18.0.11",
    "autoprefixer": "10.4.14",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "fs": "^0.0.1-security",
    "http-proxy-middleware": "^3.0.3",
    "jsonwebtoken": "^9.0.2",
    "marked": "^15.0.4",
    "mongoose": "^8.9.0",
    "multer": "^1.4.5-lts.1",
    "next": "^13.3.0",
    "next-connect": "^1.0.0",
    "openai": "^4.77.0",
    "postcss": "8.4.21",
    "punycode": "^2.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.4.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tailwind": "^4.0.0",
    "tailwindcss": "3.3.1",
    "text-encoding": "^0.7.0",
    "utils": "^0.3.1",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.26.3",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-flow": "^7.25.9",
    "@babel/preset-react": "^7.26.3",
    "@babel/preset-typescript": "^7.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/text-encoding": "^0.0.40",
    "electron": "^33.2.1",
    "electron-packager": "^17.1.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "^15.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
